<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!--实心，就是填充的意思-->
    <solid android:color="#FFFFFF" />

    <!--圆角-->
    <corners android:radius="5dp" />

    <!--描边 可以实现虚线-->
    <stroke
        android:width="1dp"
        android:color="#ffd9d9d9"
        android:dashGap="3dp"
        android:dashWidth="5dp" />

    <padding
        android:bottom="2dp"
        android:left="10dp"
        android:right="10dp"
        android:top="2dp"/>

</shape>